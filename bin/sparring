#!/bin/bash
declare -a FUNCBOTS PERFBOTS
FUNCBOTS=(identity network image volume compute)
FUNCBOT_DIR=$(dirname $(realpath $0))/../funcbot
CDBOTS=(identity network image volume compute)
CDBOT_DIR=$(dirname $(realpath $0))/../cdbot
PERFBOTS=(create stop start delete)
PERFBOT_DIR=$(dirname $(realpath $0))/../perfbot

list_perfbot () {
    for b in ${PERFBOTS[@]}; do
        echo $b
    done
}
list_cdbot () {
    for b in ${CDBOTS[@]}; do
        echo $b
    done
}
list_funcbot () {
    for b in ${FUNCBOTS[@]}; do
        echo $b
    done
}
run_perfbot () {
    # check the args
    declare -a suites
    [[ $# -ne 0 ]] && suites=($@) || suites=(${PERFBOTS[@]})
    echo ${suites[@]}
    for i in ${suites[@]}; do
        if [[ ! " ${PERFBOTS[@]} " =~ " $i " ]]; then
            echo "Abort: $i is not a test suite."
            list_perfbot
            exit 1
        fi
    done
    # Okay. Let's go.
    cd $PERFBOT_DIR
    robot   \
            --exitonerror \
            --critical critical \
            --console verbose \
            --consolecolors auto \
            --outputdir /tmp/output \
            "${suites[@]}"
}
run_cdbot () {
    # check the args
    declare -a suites
    [[ $# -ne 0 ]] && suites=($@) || suites=(${CDBOTS[@]})
    echo ${suites[@]}
    for i in ${suites[@]}; do
        if [[ ! " ${CDBOTS[@]} " =~ " $i " ]]; then
            echo "Abort: $i is not a test suite."
            list_cdbot
            exit 1
        fi
    done
    # Okay. Let's go.
    cd $CDBOT_DIR
    robot   \
            --exitonerror \
            --critical critical \
            --console verbose \
            --consolecolors auto \
            --outputdir /tmp/output \
            "${suites[@]}"
}
run_funcbot () {
    # check the args
    declare -a suites
    [[ $# -ne 0 ]] && suites=($@) || suites=(${FUNCBOTS[@]})
    echo ${suites[@]}
    for i in ${suites[@]}; do
        if [[ ! " ${FUNCBOTS[@]} " =~ " $i " ]]; then
            echo "Abort: $i is not a test suite."
            list_funcbot
            exit 1
        fi
    done
    # Okay. Let's go.
    cd $FUNCBOT_DIR
    robot   \
            --exitonerror \
            --critical critical \
            --console verbose \
            --consolecolors auto \
            --outputdir /tmp/output \
            "${suites[@]}"
}
cleanup () {
    cd $FUNCBOT_DIR
    robot   --exitonfailure \
            --exitonerror \
            --critical critical \
            --console verbose \
            --consolecolors auto \
            --outputdir /tmp/output \
            cleanup.robot
}
show_openstack_settings () {
    RESOURCES_DIR="$FUNCBOT_DIR/../resources"
    cat "$RESOURCES_DIR/openstack_settings.robot"
}
USAGE () {
    echo "USAGE: $0 {-h|-c|-d|-D|-s|-r|-l|-R|-L}" 1>&2
    echo ""
    echo " -h --help                            Display this help message."
    echo " -c --cleanup                         Clean up test resources."
    echo " -d --run-cdbot [TEST_SUITE}...       Run Continuous Delivery test."
    echo " -D --list-cdbot                      List cdbot test suites."
    echo " -s --show-os-settings                Show openstack settings."
    echo " -r --run-funcbot [TEST_SUITE]...     Run funcbot."
    echo " -l --list-funcbot                    List funcbot test suites."
    echo " -R --run-perfbot [TEST_SUITE]...     Run perfbot."
    echo " -L --list-perfbot                    List perfbot test suites."
}
if [ $# -lt 1 ]; then
    USAGE
    exit 0
fi

OPT=$1
shift
# Get argument
while true
do
    case "$OPT" in
        -h | --help)
            USAGE
            break
            ;;
        -c | --cleanup)
            cleanup 
            break
            ;;
        -d | --run-cdbot)
            run_cdbot "$@"
            break
            ;;
        -D | --list-cdbot)
            list_cdbot
            break
            ;;
        -s | --show-os-settings)
            show_openstack_settings
            break
            ;;
        -r | --run-funcbot)
            run_funcbot "$@"
            break
            ;;
        -l | --list-funcbot)
            list_funcbot
            break
            ;;
        -R | --run-perfbot)
            run_perfbot "$@"
            break
            ;;
        -L | --list-perfbot)
            list_perfbot
            break
            ;;
        *)
            echo Error: unknown option: "$OPT" 1>&2
            echo " "
            USAGE
            break
            ;;
    esac
done
